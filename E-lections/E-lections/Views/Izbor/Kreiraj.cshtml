@model E_lections.Models.GlasackiListic

@{
    ViewData["Title"] = "Kreiraj";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Kreiraj</h1>

<h4>GlasackiListic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Kreiraj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaxOdabir" class="control-label"></label>
                <input asp-for="MaxOdabir" class="form-control" />
                <span asp-validation-for="MaxOdabir" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                @Html.TextAreaFor(m => m.Opis, new { @class = "form-control" })
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



