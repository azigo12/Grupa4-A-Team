@model E_lections.Models.Osoba

@{
    ViewData["Title"] = "Register";
}

@{
    Layout = "_Layout";
}

        <div class="signin">
            <div class="col-md-4">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <!--<label asp-for="Ime" class="control-label"></label>-->
                        <input asp-for="Ime" class="form-control" placeholder="Ime" />
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Prezime" class="form-control" placeholder="Prezime" />
                        <span asp-validation-for="Prezime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="DatumRodjenja" class="form-control" placeholder="Datum rođenja" />
                        <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="BrojLicneKarte" class="form-control" placeholder="Broj lične karte" />
                        <span asp-validation-for="BrojLicneKarte" class="text-dange"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="JMBG" class="form-control" placeholder="JMBG" />
                        <span asp-validation-for="JMBG" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Lozinka" class="form-control" placeholder="Lozinka" type="password" />
                        <span asp-validation-for="Lozinka" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Ulica" class="form-control" placeholder="Ulica" />
                        <span asp-validation-for="Ulica" class="text-danger"></span>
                    </div>
                    <!--
    <div class="form-group">
        <input asp-for="Kanton" class="form-control" placeholder="Kanton" />
        <span asp-validation-for="Kanton" class="text-danger"></span>
    </div>
        -->

                    <div class="form">
                        <select asp-for="@Model.Kanton" class="form-control">
                            <option selected hidden class="menuItem">Kanton</option>
                            <option value="Unsko-sanski kanton" class="menuItem">Unsko-sanski kanton</option>
                            <option value="Posavski kanton" class="menuItem">Posavski kanton</option>
                            <option value="Tuzlanski kanton" class="menuItem">Tuzlanski kanton</option>
                            <option value="Zeničko-dobojski kanton" class="menuItem">Zeničko-dobojski kanton</option>
                            <option value="Bosansko-podrinjski kanton Goražde" class="menuItem">Bosansko-podrinjski kanton Goražde</option>
                            <option value="Srednjobosanski kanton" class="menuItem">Srednjobosanski kanton</option>
                            <option value="	Hercegovačko-neretvanski kanton" class="menuItem">	Hercegovačko-neretvanski kanton</option>
                            <option value="Zapadnohercegovački kanton" class="menuItem">Zapadnohercegovački kanton</option>
                            <option value="Kanton Sarajevo" class="menuItem">Kanton Sarajevo</option>
                            <option value="Kanton 10" class="menuItem">Kanton 10</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <input asp-for="EMail" class="form-control" placeholder="e-mail" />
                        <span asp-validation-for="EMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.RadioButtonFor(m => m.Spol, Spol.Muski, new { @class = "radio-button" })
                            Muški
                        </label>
                        <label>
                            @Html.RadioButtonFor(m => m.Spol, Spol.Zenski, new { @class = "radio-button" })
                            Ženski
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registruj se" class="btn" />
                    </div>
                </form>
            </div>
        </div>

        <div align="center">
            @if (ViewBag.Reg != null)
            {
                <h2>
                    @ViewBag.Reg
                </h2>
            }
        </div>