@model IEnumerable<E_lections.Models.GlasackiListic>

@{
    Layout = "~/Views/Shared/_LayoutGlasac.cshtml";
}


<table class="content-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                Broj kandidata
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @item.Kandidati.Count()
            <td>
                <a asp-action="DetaljiKandidata" asp-route-id="@item.ID">Detalji</a>
            </td>
            <td>
                <a asp-action="Glasaj" asp-controller="Glasac" asp-area="" asp-route-id="@item.ID">Glasaj</a>
            </td>
            <td>
                <a asp-action="Rezultati" asp-controller="Glasac" asp-area="" asp-route-id="@item.ID">Rezultati</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (ViewBag.Message != null)
{
    <h2>@ViewBag.Message</h2>
}
@if (ViewBag.PorukaGlasanje != null)
{
    <h2>
        @ViewBag.PorukaGlasanje
    </h2>
}
@if (ViewBag.Glasao != null)
{
    <h2>@ViewBag.Message</h2>
}

