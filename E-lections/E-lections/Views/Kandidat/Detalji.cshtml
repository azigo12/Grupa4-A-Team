@model IEnumerable<E_lections.Models.GlasackiListic>

@{
    Layout = "~/Views/Shared/_LayoutKandidat.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                Broj kandidata
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @item.Kandidati.Count()
                <td>
                    <a asp-action="DetaljiKandidata" asp-route-id="@item.ID">Details</a>
                </td>
                <td>
                    <a asp-action="Prijava" asp-route-id="@item.ID" asp-controller="Kandidat">Prijavite se</a>
                </td>
            </tr>
        }
    </tbody>
</table>
